<%- include('../admin/navbar') %>

<main class="content">
  <h4 class="text-center">Sales Offers</h4>

  <div class="container mt-4">
    <table class="table table-bordered table-hover align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Discount</th>
          <th>Offer Product</th>
          <th>Offer Details</th>
          <th>Valid Until</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% sales.forEach(function(sale, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= sale.discount %> %</td>
            <td><%= sale.offer_product %></td>
            <td><%= sale.offer_details %></td>

            <!-- âœ… SAFE DATE HANDLING -->
            <td>
              <%= new Date(sale.valid).toISOString().split('T')[0] %></td>
            <td>
                <a href="/admin/offers/update_sales/<%= sale.id %>" class="btn btn-primary btn-sm">Edit</a>
                <a href="/admin/offers/delete_sales/<%= sale.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this sale offer?')">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</main>

<%- include('../admin/footer') %>
