  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
.about-header {
  height: 45vh;
  background: 
    linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
    url("about_bg.jpg") center/cover no-repeat;
}

@media (max-width: 768px) {
  .about-header {
    height: 35vh;
  }
}

h3{
  color:rgb(29, 103, 133);
}



.hand-icon{
  font-size: 28px;
  color: #0d6efd;
  transition: transform 0.3s ease, color 0.3s;
  cursor: pointer;
}
.hand-icon:hover{
  transform: scale(1.2);
  color: #198754;
}
</style>

<!-- ABOUT US HEADER -->
<section class="about-header d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1 class="display-5 fw-bold">Sales & Offers</h1>
    <p class="lead mb-0">Trusted Electronics Store Since 2005</p>
  </div>
</section>


  <style>
    body{
      background: linear-gradient(135deg,#0f2027,#203a43,#2c5364);
      color:#fff;
    }

    /* Offer Banner */
    .offer-banner{
      background: linear-gradient(135deg,#ff512f,#f09819);
      padding:60px 20px;
      border-radius:25px;
      text-align:center;
      box-shadow:0 15px 35px rgba(0,0,0,0.4);
    }

    .offer-banner h1{
      font-size:3rem;
      font-weight:800;
    }

    /* Offer Cards */
    .offer-card{
      background:rgba(255,255,255,0.15);
      backdrop-filter: blur(15px);
      border-radius:20px;
      padding:25px;
      transition:0.5s;
      position:relative;
      overflow:hidden;
      box-shadow:0 12px 30px rgba(0,0,0,0.3);
    }

    .offer-card:hover{
      transform:translateY(-12px) scale(1.05);
    }

    .offer-card img{
      width:100%;
      height:180px;
      object-fit:cover;
      border-radius:15px;
    }

    .discount-badge{
      position:absolute;
      top:15px;
      left:15px;
      background:#ff3d00;
      padding:8px 15px;
      border-radius:30px;
      font-weight:bold;
    }

    .buy-btn{
      background:linear-gradient(135deg,#00c6ff,#0072ff);
      border:none;
      border-radius:30px;
      padding:10px 25px;
      color:#fff;
      font-weight:bold;
    }
     .unlock-offer{
  position: relative;
    min-height: 300px;

  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  text-align:center;
  cursor:pointer;
  overflow:hidden;
  border-radius:20px;
}

.offer-overlay{
  position:absolute;
  inset:0;
   animation:pulse 2s infinite;
}

@keyframes pulse{
  0%{transform:scale(1);}
  50%{transform:scale(1.1);}
  100%{transform:scale(1);}
}

.offer-title{
  font-size:42px;
  font-weight:800;
}

.offer-sub{
  font-size:18px;
  opacity:0.9;
}

.hidden-offer{
  opacity:0;
  transform:scale(0.5);
  transition:0.6s ease;
  margin-top:20px;
}

.hidden-offer h2{
  font-size:48px;
  color:#ffd700;
}

.hidden-offer span{
  color:#00ffcc;
}

.offer-link{
  display:inline-block;
  margin-top:15px;
  padding:12px 35px;
  background:#ff512f;
  color:#0d0303;
  border-radius:30px;
  text-decoration:none;
  font-size:18px;
}

.unlock-offer.active .hidden-offer{
  opacity:1;
  transform:scale(1);
}

.unlock-offer.active .offer-title,
.unlock-offer.active .icon-hand,
.unlock-offer.active .offer-sub{
  display:none;
}
  </style>
<div class="container my-5">

 
