  <!-- OFFER PRODUCTS -->


<section class="unlock-offer" onClick="unlockOffer()">
  <div class="offer-overlay"></div>

  <div class="offer-content">
    <h1 class="offer-title">Tap to Unlock Special Discount ðŸ”“</h1>
    <p class="offer-sub"><%= sales[0].description %></p>
    <button class="btn btn-primary icon-hand"><i class="fa-regular fa-hand-pointer"></i> Readom Offer</button>

    <div class="hidden-offer">
      <h2>FLAT<span> <%= sales[0].discount %>% OFF</span></h2>
      <p><%= sales[0].product %></p>
    <h6>
  VALIDATE TO 
  <SPAN class="text-danger"><%= new Date(sales[0].valid).toLocaleDateString('en-IN') %></SPAN>
</h6>

      <a href="/contact" class="offer-link"> Go To Contact </a>
    </div>
  </div>
</section>


  <div class="row g-4">
<% for(let i=0; i<offers.length; i++){ %>
    
    <div class="col-md-4">
      <div class="offer-card">
        <span class="discount-badge"><%= offers[i].discount %> % OFF</span>
        <img src="uploads/<%= offers[i].image %>" alt="">
        <h5 class="mt-3"><%= offers[i].name %></h5>
        <p><%= offers[i].model %></p>
       <a href="/contact"> <button class="buy-btn">Get Offer</button></a>
      </div>
    </div>
<% } %>
  </div>

</div>

<script>
function unlockOffer(){
  document.querySelector('.unlock-offer')
          .classList.add('active');
}
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
