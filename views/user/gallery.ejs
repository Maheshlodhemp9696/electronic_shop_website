<%- include('navbar') %>

<style>
  .about-header {
  height: 45vh;
  background: 
    linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
    url("about_bg.jpg") center/cover no-repeat;
}

@media (max-width: 768px) {
  .about-header {
    height: 35vh;
  }
}
    .map-container {
      width: 100%;
      height: 400px;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    iframe {
      width: 100%;
      height: 100%;
      border: 0;
    }


.img-box{
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  height: 200px;
}

.img-box img{
  width: 100%;
  transition: 0.6s ease;
}

.img-box:hover img{
  transform: scale(1.1);
  filter: brightness(70%);
}

.overlay{
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  opacity: 0;
  transition: 0.6s;
}

.img-box:hover .overlay{
  opacity: 1;
}

</style>
<section class="about-header d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1 class="display-5 fw-bold">ALL PRODUCTS</h1>
    <p class="lead mb-0">Trusted Electronics Store Since 2005</p>
  </div>
</section>
<div class="container">
  <div class="row">
    <h2 class="m-5">Images</h2>
<% for(let i=0; i<gallery.length; i++){ %>
    <div class="col-md-4 p-3">
      <div class="img-box">
        <img src="<%= gallery[i].image %>" alt="" class="h-100">
        <div class="overlay">
          <h5><%= gallery[i].caption %></h5>  
        </div>
      </div>
    </div>
<% } %>

  </div>
</div>

<%- include('footer') %>