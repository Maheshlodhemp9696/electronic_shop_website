<style>
    .auto-scroll-wrapper {
  overflow: hidden;
  position: relative;
}

.auto-scroll-track {
  display: flex;
  gap: 20px;
  animation: scroll 20s linear infinite;
}

.scroll-card {
  min-width: 280px;
  border-radius: 15px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  transition: transform 0.3s ease;
}

.scroll-card:hover {
  transform: scale(1.05);
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

</style>



