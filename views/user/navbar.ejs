    <div class="row align-items-center">
      <!-- Logo Column -->
      <div class="col-6 col-lg-3 p-0">
        <img src="logo.png" class="img-fluid w-25" style="height:50px;">
      </div>

      <!-- Toggle Button (Mobile) -->
      <div class="col-6 d-lg-none text-end">
        <button class="btn text-white" data-bs-toggle="collapse" data-bs-target="#navMenu">
          â˜°
