  <form action="/admin/home/save_update_about" method="post" enctype="multipart/form-data">

  <input type="hidden" name="id" value="<%= about.id %>">

  <div class="mb-3">
    <label>Heading</label>
    <input type="text" name="heading" value="<%= about.heading %>" class="form-control">
  </div>

  <div class="mb-3">
    <label>Text</label>
    <textarea name="text" class="form-control"><%= about.text %></textarea>
  </div>

  <div class="mb-3 text-center">
    <img src="/uploads/<%= about.image %>" class="img-preview mb-2">
    <p class="text-muted">Current Image</p>
  </div>

  <div class="mb-3">
    <label>New Image (optional)</label>
    <input type="file" name="image" class="form-control">
  </div>

  <div class="d-grid gap-2">
    <button class="btn btn-success">Update</button>
    <a href="/admin/home/view_about" class="btn btn-outline-danger">Cancel</a>
  </div>

</form>



