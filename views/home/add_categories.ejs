<style>
  .upload-card{
    background:#fff;
    padding:30px;
    border-radius:15px;
    width:100%;
    max-width:450px;
    box-shadow:0 15px 30px rgba(0,0,0,0.2);
  }
  .preview-img{
    width:100%;
    height:250px;
    border:2px dashed #ccc;
    border-radius:10px;
    display:flex;
    align-items:center;
    justify-content:center;
    overflow:hidden;
    margin-bottom:15px;
  }
  .preview-img img{
    width:100%;
    height:100%;
    object-fit:cover;
  }
</style>

<div class="upload-card">
  <h4 class="text-center text-dark mb-3">Add categories</h4>

  <form action="/admin/home/save_categories" method="POST" enctype="multipart/form-data">

    <div class="preview-img" id="previewBox">
      <span class="text-muted">Image Preview</span>
    </div>

    <div class="mb-3">
      <label class="form-label">Select Image</label>
      <input type="file" name="image" class="form-control" accept="image/*" required onchange="previewImage(event)">
    </div>
      <div class="mb-3">
      <label class="form-label">Categories Name</label>
      <input type="text" name="categories" class="form-control"  required>
    </div>

    <button type="submit" class="btn btn-primary w-100">Add Categories</button>
  </form>
</div>

<script>
function previewImage(event){
  const previewBox = document.getElementById("previewBox");
  previewBox.innerHTML = "";

  const img = document.createElement("img");
  img.src = URL.createObjectURL(event.target.files[0]);
  previewBox.appendChild(img);
}
</script>
