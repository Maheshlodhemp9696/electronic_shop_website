    .slider-img{
      height:180px;
      object-fit:cover;
      transition:0.4s;
    }
    .card:hover .slider-img{
      transform:scale(1.05);
    }
  </style>
<div class="container mt-4">

  <h3 class="mb-4 text-center">About section (home)</h3>

  <div class="row g-4">
    <% about.forEach(function(about){ %>
      <div class="col-lg-5 col-md-8 col-sm-6">
        <div class="card shadow-sm h-100">
          <img src="/uploads/<%= about.image %>" class="card-img-top slider-img">
          <div class="card-body text-center">
            <p class="small text-muted mb-2">
              <%= about.image %>
            </p>
            <h5 class="small text-dark mb-2">
              <%= about.heading %>
            </h5>
            <p class="small text-dark mb-2">
              <%= about.text %>
            </p>

            <a href="/admin/home/delete_about/<%= about.id %>"  class="btn btn-sm btn-danger">
