<%- include('../admin/navbar') %>


<main class="content"> 
<h4 class="text-center">Add Refrigerator </h4>
    <div class="cards">
      <div class="card">
        <form action="/admin/products/save_refreigerator" method="POST" enctype="multipart/form-data" class="p-4">
          <!-- Refrigerator Name -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Refrigerator Name</label>
            <input 
              type="text" 
              name="refreigerator_name" 
              class="form-control"
              placeholder="Enter refrigerator name"
              required>
            </div>
            <!-- Refrigerator Description -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Refrigerator Model</label>
                <input 
                    type="text"
                    name="refreigerator_model" 
                    class="form-control" 
                    rows="4"
                    placeholder="Write short description about refrigerator"
                    required>
            </div>
            <!-- Refrigerator Price -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Refrigerator Price</label>
              <input
                type="number" 
                name="price" 
                class="form-control"
                placeholder="Enter refrigerator price"
                required>
            </div>
            <!-- Refrigerator Image -->
            <div class="mb-4">
              <label class="form-label fw-semibold">Refrigerator Image</label>
              <input    
                type="file" 
                name="image" 
                class="form-control"
                accept="image/*"
                onchange="previewMobileImage(event)"
                required>   
                <div class="mt-3 text-center">
                    <img id="imagePreview" class="preview-img">
                </div>
            </div>
            <!-- Buttons -->    
            <div class="text-center">
              <button type="submit" class="btn btn-success px-4">
                ➕ Add Refrigerator
              </button>
              <a href="/admin/products" class="btn btn-secondary px-4 ms-2">
                ⬅ Back
              </a>  
            </div>
        </form>
        </div>
    </div>
    <script>
      function previewMobileImage(event){
        var reader = new FileReader();
        reader.onload = function(){
          var output = document.getElementById('imagePreview');
          output.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
      }
    </script>
</main>