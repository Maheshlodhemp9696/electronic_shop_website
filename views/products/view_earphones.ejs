<%- include('../admin/navbar') %>
<main class="content">
   <div class="container mt-4">
    <h4 class="text-center mb-4">Earphones</h4>
    <table class="table table-bordered table-hover align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Brand</th>
          <th>Model</th>
          <th>Price</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% earphones.forEach(function(earphone, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= earphone.brand %></td>
            <td><%= earphone.model %></td>
            <td><%= earphone.price %></td>
            <td>
              <img src="/uploads/<%= earphone.image %>" alt="<%= earphone.model %>" width="100">
            </td>
            <td>
              <a href="/admin/products/update_earphones/<%= earphone.id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/admin/products/delete_earphones/<%= earphone.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this earphone?');">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>    
</main>
<%- include('../admin/footer') %>