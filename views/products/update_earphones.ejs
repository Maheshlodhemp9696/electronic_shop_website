<%- include("../admin/navbar") %>
 
  <style>
    .update-card{
      max-width: 520px;
      margin: 60px auto;
      border-radius: 18px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

    .img-preview{
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 14px;
      border: 2px dashed #0d6efd;
    }
  </style>
<div class="card update-card p-4">
  <h4 class="text-center mb-3">Update Earphones</h4>
<form action="/admin/products/save_update_earphones" method="post" enctype="multipart/form-data">
<input type="hidden" name="id" value="<%= earphone.id %>">
  <div class="mb-3">
    <label>Earphones Name</label>
    <input type="text" name="brand" class="form-control" value="<%= earphone.brand %>">
  </div>

  <div class="mb-3">
    <label>Earphones Model</label>
    <input type="text" name="model" class="form-control" value="<%= earphone.model %>">
  </div>

  <div class="mb-3">
    <label>Earphones Price </label>
    <input type="number" name="price" class="form-control" value="<%= earphone.price %>">
  </div>

  <div class="mb-3 text-center">
    <img src="/uploads/<%= earphone.image %>" class="img-preview mb-2">
    <p class="text-muted">Current Image</p>
  </div>

  <div class="mb-3">
    <label>New Image (optional)</label>
    <input type="file" name="image" class="form-control">
  </div>

  <div class="d-grid gap-2">
    <button class="btn btn-success">Update</button>
    <a href="/admin/home/view_products" class="btn btn-outline-danger">Cancel</a>
  </div>
 
</form>
</div>
<%- include("../admin/footer") %>