
<%- include('../admin/navbar') %>
<main class="content">
   <div class="container mt-4">
    <h4 class="text-center mb-4">Washing Machines</h4>
    <table class="table table-bordered table-hover align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Brand</th>
          <th>Model</th>
          <th>Price</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% washingMachines.forEach(function(machine, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= machine.brand %></td>
            <td><%= machine.model %></td>
            <td><%= machine.price %></td>
            <td>
              <img src="/uploads/<%= machine.image %>" alt="<%= machine.model %>" width="100">
            </td>
            <td>
              <a href="/admin/products/update_washing_machines/<%= machine.id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/admin/products/delete_washing_machines/<%= machine.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this washing machine?');">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

</main>

<%- include('../admin/footer') %>