<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>MP Electronics | Admin Dashboard</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family:'Segoe UI',sans-serif;
}

body{
  min-height:100vh;
  background:linear-gradient(-45deg,#ffffff,#f4f9ff,#eef6ff,#ffffff);
  background-size:400% 400%;
  animation:bgMove 12s ease infinite;
  color:#000;
}

@keyframes bgMove{
  0%{background-position:0% 50%}
  50%{background-position:100% 50%}
  100%{background-position:0% 50%}
}

/* Layout */
.dashboard{
  display:flex;
  min-height:100vh;
}

/* Sidebar */
.sidebar{
  width:260px;
  background:rgba(255,255,255,0.9);
  backdrop-filter:blur(16px);
  padding:25px;
  border-right:1px solid rgba(0,0,0,0.1);
}

.sidebar h5{
  text-align:center;
  margin-bottom:35px;
  font-weight:700;
}

.sidebar ul{
  list-style:none;
}

.sidebar li{
  padding:15px 18px;
  margin-bottom:12px;
  border-radius:14px;
  display:flex;
  align-items:center;
  gap:12px;
  transition:.4s;
  cursor:pointer;
}
.sidebar li:hover{
  background:linear-gradient(135deg,#00c6ff,#0072ff);
  color:#fff;
  transform:translateX(8px);
}

.sidebar li i{
  color:#0072ff;
}

.sidebar li:hover i{
  color:#fff;
}

a{
  text-decoration:none;
  color:inherit;
}

/* Content */
.content{
  flex:1;
  padding:40px;
}

/* Cards */
.cards{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
  gap:25px;
}

.card{
  background:#fff;
  padding:30px;
  border-radius:22px;
  text-align:center;
  box-shadow:0 12px 30px rgba(0,0,0,0.12);
  transition:.4s;
}

.card:hover{
  transform:translateY(-10px);
}

.card i{
  font-size:34px;
  margin-bottom:10px;
  color:#0072ff;
}

.card span{
  font-size:30px;
  font-weight:700;
}
</style>
</head>

<body>

<div class="dashboard">

  <!-- Sidebar -->
  <aside class="sidebar">
    <h5>MP Electronics</h5>
    <ul>
      <a href="/admin/dashboard"><li><i class="fa-solid fa-chart-line"></i>Dashboard</li></a>
      <a href="/admin/home"><li><i class="fa-solid fa-house"></i>Home</li></a>
      <a href="/admin/about"><li><i class="fa-solid fa-circle-info"></i>About</li></a>
      <a href="/admin/products"><li><i class="fa-solid fa-box"></i>Products</li></a>
      <a href="/admin/gallery"><li><i class="fa-solid fa-image"></i>Gallery</li></a>
      <a href="/admin/offers"><li><i class="fa-solid fa-tag"></i>Offers</li></a>
     <a href="javascript:void(0)" onclick="confirmLogout()" ><li><i class="fa-solid fa-right-from-bracket"></i>
  Logout
</a>
 
    </ul>
  </aside>

<script>
document.querySelectorAll(".count").forEach(c=>{
  let t=+c.innerText,i=0;
  let x=setInterval(()=>{
    if(i>=t) return clearInterval(x);
    c.innerText=++i;
  },20);
});
function confirmLogout() {
  if (confirm("Are you sure you want to logout?")) {
    window.location.href = "/admin/logout";
  }
}
</script>
</body>
</html>
