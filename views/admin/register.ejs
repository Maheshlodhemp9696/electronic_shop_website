<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Admin Registration</title>

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <!-- SweetAlert -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    /* Background */
    body {
      min-height: 100vh;
    }

    .wrapper {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background:
        linear-gradient(rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.65)),
        url("https://images.unsplash.com/photo-1550751827-4bd374c3f58b?auto=format&fit=crop&w=1920&q=80");
      background-size: cover;
      background-position: center;
    }

    /* Card */
    .card {
      width: 100%;
      max-width: 420px;
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(14px);
      padding: 35px;
      border-radius: 20px;
      color: #fff;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
      text-align: center;
    }

    .card h2 {
      font-size: 28px;
    }

    .card p {
      font-size: 14px;
      opacity: 0.9;
      margin-bottom: 25px;
    }

    /* Inputs */
    .input-box {
      position: relative;
      margin-bottom: 16px;
    }

    .input-box i {
      position: absolute;
      top: 50%;
      left: 14px;
      transform: translateY(-50%);
      opacity: 0.8;
    }

    .input-box input,
    .input-box select {
      width: 100%;
      padding: 12px 15px 12px 42px;
      border: none;
      outline: none;
      border-radius: 30px;
      background: rgba(255, 255, 255, 0.25);
      color: #fff;
    }

    input::placeholder {
      color: #eee;
    }

    /* Button */
    button {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 30px;
      margin-top: 10px;
      background: linear-gradient(45deg, #ffc107, #fd7e14);
      font-weight: 600;
      cursor: pointer;
      transition: 0.4s;
    }

    button:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    /* Links */
    .extra {
      margin-top: 15px;
      font-size: 13px;
    }

    .extra a {
      color: #fff;
      text-decoration: none;
      opacity: 0.9;
    }

    .extra a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <div class="wrapper">
    <div class="card shadow-sm p-4 rounded-4">
      <h2 class="mb-1">Admin Registration</h2>
      <p class="text-muted mb-3">Create admin account for MP Electronics</p>

      <% if (typeof error !=="undefined" && error) { %>
        <div class="alert alert-danger alert-dismissible fade show small py-2 mb-3" role="alert">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          <%= error %>
          
          <button onClick="hide()" type="button" class="btn btn-close btn-danger" data-bs-dismiss="alert" style="width:70px;"> ok </button> 
          </div>
        <% } %>

          <form action="/admin/save_register" method="post">

            <div class="input-box mb-3">
              <i class="bi bi-person"></i>
              <input type="text" name="name" class="form-control" placeholder="Admin Name" required>
            </div>

            <div class="input-box mb-3">
              <i class="bi bi-envelope"></i>
              <input type="email" name="email" class="form-control" placeholder="Admin Email" required>
            </div>

            <div class="input-box mb-3">
              <i class="bi bi-phone"></i>
              <input type="tel" name="mobile" class="form-control" placeholder="Mobile Number" required>
            </div>

            <div class="input-box mb-4">
              <i class="bi bi-lock"></i>
              <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">
              Register Admin
            </button>

            <div class="extra text-center mt-3">
              <a href="/admin" class="text-decoration-none">
                Already Admin? Login
              </a>
            </div>

          </form>
    </div>

  </div>

  <script>
    function adminRegister(e) {
      e.preventDefault();

      Swal.fire({
        icon: 'success',
        title: 'Admin Registered!',
        text: 'Admin account created successfully.',
        confirmButtonColor: '#0d6efd'
      });
    }

    function hide() {
      document.querySelector('.alert').style.display = 'none' ;
    }
  </script>

</body>

</html>