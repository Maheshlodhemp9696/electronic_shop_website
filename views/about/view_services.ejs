<%- include('../admin/navbar.ejs') %>

<style>
.table thead{
  background: linear-gradient(90deg,#0d6efd,#6610f2);
  color:#fff;
}

.table tbody tr{
  transition:0.25s ease;
}

.table tbody tr:hover{
  background: rgba(13,110,253,0.08);
}

.action-btn{
  padding:6px 14px;
  font-size:14px;
  border-radius:6px;
}

.service-desc{
  max-width:400px;
  font-size:14px;
  color:#6c757d;
}
</style>

<div class="container mt-5">
  <h3 class="text-center fw-bold mb-4">Services Management</h3>

  <div class="table-responsive shadow rounded">
    <table class="table align-middle mb-0">
      <thead>
        <tr>
          <th>#</th>
          <th>Service Name</th>
          <th>Description</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>

      <tbody>
        <% if(services.length === 0){ %>
          <tr>
            <td colspan="4" class="text-center text-muted py-4">
              No services found
            </td>
          </tr>
        <% } %>

        <% services.forEach(function(s, index){ %>
          <tr>
            <td><%= index + 1 %></td>

            <td class="fw-semibold">
              <%= s.service %>
            </td>

            <td class="service-desc">
              <%= s.service_discription %>
            </td>

            <td class="text-center">
              <a href="/admin/about/update_services/<%= s.id %>"
                 class="btn btn-sm btn-warning action-btn me-2">
                ‚úèÔ∏è Update
              </a>

              <a href="/admin/about/delete_services/<%= s.id %>"
                 class="btn btn-sm btn-danger action-btn"
                 onclick="return confirm('Are you sure you want to delete this service?')">
                üóë Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../admin/footer.ejs') %>
