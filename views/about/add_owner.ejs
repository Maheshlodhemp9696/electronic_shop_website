<style>
.owner-form-wrapper{
  max-width:750px;
  margin:auto;
  background:rgba(255,255,255,0.9);
  backdrop-filter: blur(8px);
  padding:30px;
  border-radius:16px;
  box-shadow:0 15px 40px rgba(0,0,0,0.15);
}

.form-title{
  font-weight:700;
  background:linear-gradient(90deg,#0d6efd,#6610f2);

}

.preview-img{
  width:140px;
  height:140px;
  border-radius:50%;
  object-fit:cover;
  border:4px solid #dee2e6;
  display:none;
}
</style>

<div class="container mt-5">
  <div class="owner-form-wrapper">

    <h4 class="text-center mb-4 form-title">Add Owner Details</h4>

    <form action="/admin/about/save_owner" method="POST" enctype="multipart/form-data">

      <!-- Owner Name -->
      <div class="mb-3">
        <label class="form-label fw-semibold">Owner Name</label>
        <input 
          type="text" 
          name="owner_name" 
          class="form-control"
          placeholder="Enter owner name"
          required>
      </div>

      <!-- Owner Description -->
      <div class="mb-3">
        <label class="form-label fw-semibold">Owner Description</label>
        <textarea 
          name="owner_discription" 
          class="form-control" 
          rows="4"
          placeholder="Write short description about owner"
          required></textarea>
      </div>

      <!-- Owner Image -->
      <div class="mb-4">
        <label class="form-label fw-semibold">Owner Image</label>
        <input 
          type="file" 
          name="image" 
          class="form-control"
          accept="image/*"
          onchange="previewOwnerImage(event)"
          required>

        <div class="mt-3 text-center">
          <img id="imagePreview" class="preview-img">
        </div>
      </div>
      <!-- Buttons -->
      <div class="text-center">
        <button type="submit" class="btn btn-success px-4">
          ➕ Add Owner
        </button>

        <a href="/admin/about/view_owner" class="btn btn-secondary px-4 ms-2">
          ⬅ Back
        </a>
      </div>

    </form>
  </div>
</div>

<script>
function previewOwnerImage(event){
  const img = document.getElementById("imagePreview");
  img.src = URL.createObjectURL(event.target.files[0]);
  img.style.display = "inline-block";
}
</script>

